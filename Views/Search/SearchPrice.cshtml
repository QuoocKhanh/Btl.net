@*muốn nhìn thấy class Helper.cs thì phải using thư mục chứa class đó*@
@using BTL.MyClass
@using BTL.Models
@{
	//load file Layout2.cshtml vào đây
	Layout = "~/Views/Sharedd/Layout2.cshtml";
}
@* Để phân trang thì using các đối tượng sau *@
@using X.PagedList
@using X.PagedList.Mvc.Core


<div class="wrap-shop-control">

	<h1 class="shop-title">Search from price: @ViewBag.fromPrice - to price: @ViewBag.toPrice</h1>

	<div class="wrap-right">
	</div>

</div><!--end wrap shop control-->

<div class="row">

	<ul class="product-list grid-products equal-container">
		@foreach (var item in Model)
		{
			<div class="col-lg-6 col-sm-6">
				<div class="single_product_item">
					<img src="~/Upload/Products/@item.Photo" alt="#" class="img-fluid">
					<h3>
						<a href="/Products/Detail/@item.Id">
							@item.Name
						</a>
					</h3>
					<p>From @string.Format("{0:#,#.}",item.Price)$</p>

				</div>
			</div>
		}

	</ul>

</div>

<div class="wrap-pagination-info">
	@*<ul class="page-numbers">
	<li><span class="page-number-item current">1</span></li>
	<li><a class="page-number-item" href="#">2</a></li>
	<li><a class="page-number-item" href="#">3</a></li>
	<li><a class="page-number-item next-link" href="#">Next</a></li>
	</ul>*@
	@* Hàm sau sẽ thực hiện việc hiển thị phân trang *@
	@Html.PagedListPager((IPagedList)Model,p=>Url.Action("SearchPrice", new {page = p, fromPrice=ViewBag.fromPrice, toPrice=ViewBag.toPrice}))
</div>

