@using BTL.Models
@{
    //load file Layout2.cshtml vào đây
    Layout = "~/Views/Sharedd/Layout.cshtml";
}

<!-- breadcrumb part start-->
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>WishList</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->
<section class="cart_area section_padding"> 
    @if (Model.Count != null)
    {
            <div class="container">
                <div class="cart_inner">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Price</th>                                                                
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="media">
                                                <div class="d-flex">
                                                    <img src="/Upload/Products/@item.Photo" alt="" />
                                                </div>
                                                <div class="media-body">
                                                    <p>@item.Name</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <h5>$@string.Format("{0:#,#.}",item.Price - (item.Price * item.Discount)/100)</h5>
                                        </td>                                       
                                        <td>
                                            <a href="/Wishlist/Remove/@item.Id" class="btn btn-delete" title="Remove" style=" top:5px; left:25px;">
                                            <i class="fa fa-times-circle" aria-hidden="true"></i>
                                        </td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                        
                    </div>
                </div>
            </div>
        
    }
</section>
